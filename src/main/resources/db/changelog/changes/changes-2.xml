<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Здесь будут изменения -->


    <changeSet id="insert-admin-user" author="Se2my00of5">
        <!-- 1. Добавляем в базовую таблицу -->
        <insert tableName="users">
            <column name="id" valueNumeric="1"/>
            <column name="role" value="ADMIN"/>
        </insert>

        <!-- 2. Добавляем в admin_users -->
        <insert tableName="admin_users">
            <column name="id" valueNumeric="1"/>
            <column name="login" value="admin"/>
            <!-- bcrypt hash для "admin123" -->
            <column name="password_hash" value="$2a$10$O96587v179rbrcrjDpp0Y.ljcJccdAvqgaACBEJrKV4yfiN/0Esia"/>
        </insert>

        <!-- 3. Обновляем счётчик-->
        <sql>ALTER SEQUENCE users_id_seq RESTART WITH 2;</sql>
    </changeSet>

    <changeSet id="1759318321649-1" author="Se2my00of5">
        <addColumn tableName="telegram_users">
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="1759318321649-3" author="Se2my00of5">
        <dropColumn columnName="full_name" tableName="telegram_users"/>

        <dropColumn columnName="username" tableName="telegram_users"/>
    </changeSet>


</databaseChangeLog>
