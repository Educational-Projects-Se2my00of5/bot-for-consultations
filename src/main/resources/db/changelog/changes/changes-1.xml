<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Здесь будут изменения -->


    <changeSet id="1758627323817-1" author="Se2my00of5">
        <createTable tableName="admin_user">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_adminuser"/>
            </column>
            <column name="login" type="VARCHAR(255)"/>
            <column name="password_hash" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1758627323817-2" author="Se2my00of5">
        <createTable tableName="telegram_user">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_telegramuser"/>
            </column>
            <column name="telegram_id" type="BIGINT"/>
            <column name="username" type="VARCHAR(255)"/>
            <column name="full_name" type="VARCHAR(255)"/>
            <column name="phone" type="VARCHAR(255)"/>
            <column name="has_confirmed" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1758627323817-3" author="Se2my00of5">
        <createTable tableName="user">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user"/>
            </column>
            <column name="role" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1758627323817-4" author="Se2my00of5">
        <addForeignKeyConstraint baseColumnNames="id" baseTableName="admin_user" constraintName="FK_ADMINUSER_ON_ID"
                                 referencedColumnNames="id" referencedTableName="user"/>
    </changeSet>
    <changeSet id="1758627323817-5" author="Se2my00of5">
        <addForeignKeyConstraint baseColumnNames="id" baseTableName="telegram_user"
                                 constraintName="FK_TELEGRAMUSER_ON_ID" referencedColumnNames="id"
                                 referencedTableName="user"/>
    </changeSet>

    <changeSet id="insert-admin-user" author="Se2my00of5">
        <!-- 1. Добавляем в базовую таблицу -->
        <insert tableName="user">
            <column name="id" valueNumeric="1"/>
            <column name="role" value="ADMIN"/>
        </insert>

        <!-- 2. Добавляем в admin_users -->
        <insert tableName="admin_user">
            <column name="id" valueNumeric="1"/>
            <column name="login" value="admin"/>
            <!-- bcrypt hash для "admin123" -->
            <column name="password_hash" value="$2a$10$O96587v179rbrcrjDpp0Y.ljcJccdAvqgaACBEJrKV4yfiN/0Esia"/>
        </insert>

        <!-- 3. Обновляем счётчик-->
        <sql>ALTER SEQUENCE user_id_seq RESTART WITH 2;</sql>
    </changeSet>
    <changeSet id="1758628592923-1" author="Se2my00of5">
        <createTable tableName="consultation">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_consultation"/>
            </column>
            <column name="title" type="VARCHAR(255)"/>
            <column name="start_time" type="TIME"/>
            <column name="end_time" type="TIME"/>
            <column name="date" type="DATE"/>
            <column name="teacher_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1758628592923-2" author="Se2my00of5">
        <addForeignKeyConstraint baseColumnNames="teacher_id" baseTableName="consultation"
                                 constraintName="FK_CONSULTATION_ON_TEACHER" referencedColumnNames="id"
                                 referencedTableName="telegram_user"/>
    </changeSet>
    <changeSet id="1758633447301-1" author="Se2my00of5">
        <createTable tableName="student_consultation">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_studentconsultation"/>
            </column>
            <column name="student_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="consultation_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1758633447301-2" author="Se2my00of5">
        <addForeignKeyConstraint baseColumnNames="consultation_id" baseTableName="student_consultation"
                                 constraintName="FK_STUDENTCONSULTATION_ON_CONSULTATION" referencedColumnNames="id"
                                 referencedTableName="consultation"/>
    </changeSet>
    <changeSet id="1758633447301-3" author="Se2my00of5">
        <addForeignKeyConstraint baseColumnNames="student_id" baseTableName="student_consultation"
                                 constraintName="FK_STUDENTCONSULTATION_ON_STUDENT" referencedColumnNames="id"
                                 referencedTableName="telegram_user"/>
    </changeSet>


</databaseChangeLog>
