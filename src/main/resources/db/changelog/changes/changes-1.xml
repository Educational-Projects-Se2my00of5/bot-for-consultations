<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Здесь будут изменения -->


    <changeSet id="1759296139031-1" author="Se2my00of5">
        <createTable tableName="admin_users">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_admin_users"/>
            </column>
            <column name="login" type="VARCHAR(255)"/>
            <column name="password_hash" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1759296139031-2" author="Se2my00of5">
        <createTable tableName="consultation">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_consultation"/>
            </column>
            <column name="title" type="VARCHAR(255)"/>
            <column name="start_time" type="TIME"/>
            <column name="end_time" type="TIME"/>
            <column name="date" type="DATE"/>
            <column name="teacher_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1759296139031-3" author="Se2my00of5">
        <createTable tableName="student_consultation">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_studentconsultation"/>
            </column>
            <column name="student_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="consultation_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1759296139031-4" author="Se2my00of5">
        <createTable tableName="telegram_users">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_telegram_users"/>
            </column>
            <column name="telegram_id" type="BIGINT"/>
            <column name="username" type="VARCHAR(255)"/>
            <column name="full_name" type="VARCHAR(255)"/>
            <column name="phone" type="VARCHAR(255)"/>
            <column name="has_confirmed" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1759296139031-5" author="Se2my00of5">
        <createTable tableName="users">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="role" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1759296139031-6" author="Se2my00of5">
        <addForeignKeyConstraint baseColumnNames="id" baseTableName="admin_users" constraintName="FK_ADMIN_USERS_ON_ID"
                                 referencedColumnNames="id" referencedTableName="users"/>
    </changeSet>
    <changeSet id="1759296139031-7" author="Se2my00of5">
        <addForeignKeyConstraint baseColumnNames="teacher_id" baseTableName="consultation"
                                 constraintName="FK_CONSULTATION_ON_TEACHER" referencedColumnNames="id"
                                 referencedTableName="telegram_users"/>
    </changeSet>
    <changeSet id="1759296139031-8" author="Se2my00of5">
        <addForeignKeyConstraint baseColumnNames="consultation_id" baseTableName="student_consultation"
                                 constraintName="FK_STUDENTCONSULTATION_ON_CONSULTATION" referencedColumnNames="id"
                                 referencedTableName="consultation"/>
    </changeSet>
    <changeSet id="1759296139031-9" author="Se2my00of5">
        <addForeignKeyConstraint baseColumnNames="student_id" baseTableName="student_consultation"
                                 constraintName="FK_STUDENTCONSULTATION_ON_STUDENT" referencedColumnNames="id"
                                 referencedTableName="telegram_users"/>
    </changeSet>
    <changeSet id="1759296139031-10" author="Se2my00of5">
        <addForeignKeyConstraint baseColumnNames="id" baseTableName="telegram_users"
                                 constraintName="FK_TELEGRAM_USERS_ON_ID" referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>
