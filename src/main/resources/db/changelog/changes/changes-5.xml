                                 referencedTableName="telegram_users"/>
    </changeSet>
    <changeSet id="1767771659191-3" author="Se2my00of5">
        <dropColumn columnName="reminder_time" tableName="telegram_users"/>
    </changeSet>
</databaseChangeLog>
